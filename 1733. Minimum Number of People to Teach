import java.util.*;

class Solution {
    public int minimumTeachings(int n, List<List<Integer>> languages, int[][] friendships) {
        List<Set<Integer>> known = new ArrayList<>();
        for (List<Integer> ls : languages) {
            known.add(new HashSet<>(ls));
        }

        Set<Integer> need = new HashSet<>();
        for (int[] f : friendships) {
            int u = f[0] - 1, v = f[1] - 1;
            boolean ok = false;
            for (int lang : known.get(u)) {
                if (known.get(v).contains(lang)) { ok = true; break; }
            }
            if (!ok) { need.add(u); need.add(v); }
        }

        int ans = Integer.MAX_VALUE;
        for (int lang = 1; lang <= n; ++lang) {
            int cnt = 0;
            for (int person : need) {
                if (!known.get(person).contains(lang)) ++cnt;
            }
            ans = Math.min(ans, cnt);
        }
        return need.isEmpty() ? 0 : ans;
    }
}
